generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  nome  String
  email String @unique
  senha String
  foto  String
  post  Post[]

  @@map("users")
}

model Post {
  id         String   @id @default(uuid())
  titulo     String
  conteudo   String
  created_at DateTime @default(now())
  usuario    User     @relation(fields: [usuarioId], references: [id])
  usuarioId  String

  @@map("posts")
}
